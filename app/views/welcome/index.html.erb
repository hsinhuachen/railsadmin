<div id="full" class="carousel">
	<div class="carousel-inner slider">
	  <div class="carousel-item">
	  	<div class="pic" style="background-image: url('<%= asset_path("chenli.jpg") %>'); "></div>
	  </div>
	  <div class="carousel-item">
	  	<div class="pic" style="background-image: url('<%= asset_path("gutenberg.jpg") %>'); "></div>
	  </div>
	  <div class="carousel-item">
	  	<div class="pic" style="background-image: url('<%= asset_path("holdthattiger.jpg") %>'); "></div>
	  </div>
	  <div class="carousel-item">
	  	<div class="pic" style="background-image: url('<%= asset_path("tolaku.jpg") %>'); "></div>
	  </div>
	</div> <!-- /carousel-inner -->
</div>
<div id="content" class="container">
	<div class="homelist list">
	<% @posts.each do |post| %>
		<div class="project-item col-sm-6">
			<% #link_to "", project_path(I18n.locale, id: post.id), class: "item-link" %>
			<%= link_to "", post, class: "item-link"  %>
			<div class="mask fade">
				<h3 class="project-name"><%=post.title %></h3>
			</div>
			<%= image_tag post.thumb.url + "?" + DateTime.now.strftime('%s'), class: 'img-responsive', alt: post.title %>			
		</div>
	<% end %>
		<hr class="clear" />
	</div> <!-- /list -->

	<%= link_to content_tag(:span, 'View all works'), projects_path, class: 'more text-center' %>
</div> <!-- /content -->
