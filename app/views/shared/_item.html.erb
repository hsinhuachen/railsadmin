<% if column == 2 %>
<div class="project-item col-md-6">
<% elsif column == 3 %>
<div class="project-item col-md-4 col-sm-6">
<% else %>
<div class="project-item col-md-3 col-sm-6">
<% end %>
	<div class="thumb">
		<% #link_to "", project_path(I18n.locale, id: post.id), class: "item-link" %>
		<%= link_to "", post, class: "item-link", :data => { :turbolinks => 'false' }  %>
		<div class="mask fade">
		</div>
		<%= image_tag post.thumb.url, class: 'img-responsive', alt: post.title  %>
	</div> <!-- /thumb -->
	<h3 class="project-name"><%=post.title %></h3>
	<% #content_tag :p, post.tag_list %>
</div>